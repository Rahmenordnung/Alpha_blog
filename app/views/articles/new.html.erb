<h1>Eine neue Artikel erstellen</h1>

<% if @article.errors.any? %>
  <h2>Die folgenden Fehler haben das Speichern des Artikels verhindert</h2> 
  <ul> 
    <% @article.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>    

<%= form_with scope: :article, url: articles_path, local: true do |f|%>
  <p>
      <%= f.label :title%><br/>
      <%= f.text_field :title%>

  </p>

  <p>
      <%= f.label :description%><br/>
      <%= f.text_area :description%>

  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
