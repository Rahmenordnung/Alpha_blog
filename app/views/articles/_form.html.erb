
<div class="container">


  <div class="row justify-content-center">
    <div class="col-10 mt-1 p-3">
      <%= render 'shared/errors' %>

        <%= form_with(model: @article, class: "shadow p-3 mb-2 bg-secondary rounded", local: true)  do |f|%>
            <div class="form-group row">
              <%= f.label :title, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Titel des Artikels" %>
              </div>
            </div>

          <div class="form-group row">
                <%= f.label :description, class: "col-2 col-form-label text-light"%>
              <div class="col-10">
                <%= f.text_area :description, rows:10,  class: "form-control shadow rounded", placeholder: "Beschreibung des Artikels"%>
              </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg " %>
          </div>
        <% end %>
    </div>
  <div class="mb-3">
    <%= link_to '[ Rückgängig machen Zuruck zum ArtikelListe }' , articles_path, class: "text-info mb-3" %>
    </div>
  </div>
</div>

